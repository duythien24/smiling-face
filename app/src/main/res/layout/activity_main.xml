<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gr6" />

    <Button
        android:id="@+id/main_btnSignIn"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/shapebtn"
        android:text="Sign in"
        app:backgroundTint="#9C27B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/main_btnRegister"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/shapebtn"
        android:text="Register"
        app:backgroundTint="#9C27B0"
        app:layout_constraintEnd_toEndOf="@+id/main_btnSignIn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/main_btnSignIn"
        app:layout_constraintTop_toBottomOf="@+id/main_btnSignIn" />
</androidx.constraintlayout.widget.ConstraintLayout>